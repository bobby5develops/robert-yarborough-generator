.marquee {
	position: relative;
	display: block;
	border: 1px solid #c8c8c8;
	overflow: hidden;
	margin: 10px;
	box-sizing: border-box;
	-webkit-box-sizing: border-box;

}

.marquee .slider {
	position: relative;
	top: 0;
	left: 0;
	transition: left 1.5s ease-in-out;
	-webkit-transition: left 1.5s ease-in-out;
}

.marquee .buttonContainer {
	position: absolute;
	z-index: 10;
}

.marquee .button {
	display: inline-block;
	width: 50px;
	height: 50px;
	background-color: rgba(255,0,0,0.5);
	margin: 10px;
	cursor: pointer;
}

.marquee img {
	/*display: block;*/
}

.marquee.tablet img{
	float: left;
	position: relative;
}


.shareButton {
	position: absolute;
	top: 12px;
	right: 12px;
	color: #919191;
	padding: 5px 9px 5px 9px;
	font-size: 11px;
	background-color: #f0efef;
	text-decoration: none;

	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	border-radius: 5px; /* future proofing */
}

