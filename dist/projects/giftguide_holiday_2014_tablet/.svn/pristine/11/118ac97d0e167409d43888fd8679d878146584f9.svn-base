
.product.ralphlauren {
	zoom: 1;
	vertical-align: top;	
	width: 172px;
	font: 11px Verdana, Arial;
	position: absolute;
	max-height: 310px;
	min-height: 310px;
	height: 310px;
	overflow: hidden;

	box-sizing: border-box;
	-webkit-box-sizing: border-box;

	-webkit-transition: opacity 0.5s; /* For Safari 3.1 to 6.0 */
    transition: opacity 0.5s;
}

.product.ralphlauren .addToBridalParty {
	cursor: pointer;
	margin-top: 10px;
	margin-bottom: 5px;
}

.product.ralphlauren .colorSwatches {
	margin-top: 10px;
}

.product.ralphlauren.hasPromotions .bonusOffers {
	display: block;	
}

.product.ralphlauren .bonusOffers {
	padding-top: 10px;
	background: #ffffff;
	color: #cc0000;
	font-weight: bold;
	border-top: 1px solid #efefef;
	margin-top: 10px;
	position: relative;
	display: none;
	cursor: pointer
}

.product.ralphlauren .bonusOffers .offer {
	font-weight: normal;
	color: #cc0000;
	cursor: auto;
	padding: 5px;
}


.product.ralphlauren .giftListRow {
	cursor: pointer;
}

.product.ralphlauren.inWishlist .giftListRow {
	display: none;
}

.product.ralphlauren .giftListRow2 {
	display: none;
	color: #999;
}

.product.ralphlauren.inWishlist .giftListRow2 {
	display: block;
}

.product.ralphlauren .giftListRow, .product.ralphlauren .giftListRow2 {
	font-weight: bold;
}

.product.ralphlauren .quickview {
	position: absolute;
	top: 185px;
	right: 4px;
	opacity: .7;
	height: 26px;
	width: 88px;
	overflow: hidden;
	display: none;
}

.product.ralphlauren .quickview.hover {
	opacity: 1 !important;
}

.touch .product.ralphlauren .quickview {
	display: block !important;
}

.product.ralphlauren .quickview A {
	display: block;
	background: url('../images/qv-button.png');
	width: 88px;
	height: 26px;
	text-indent: -9000px;
}

 .product.ralphlauren.hover .quickview {
 	display: block;
 }

.product.ralphlauren .quickview A:hover {
	background-position: 0px -26px;
}

.product.ralphlauren .quickview A.clicked {
	background-position: 0px -52px !important;
}





.product.ralphlauren .image {
	width: 170px;
	height: auto;
	border: 1px solid #cecece;
	overflow: hidden;
	display: block;
}

.product.ralphlauren .moreColors {
	text-align: center;
	background: black;
	color: white;
	font: 10px Arial;
	text-transform: uppercase;
	padding-top: 2px;
	padding-bottom: 2px;
	font-weight: bold;
}

.product.ralphlauren A {
	text-decoration: none;
}

.product.ralphlauren .product.ralphlaurenImage {
	width: 171px;	
	height: 211px;
}



.product.ralphlauren .votingRow {
	padding-top: 5px;
	font-family: Conv_ITCAvantGardeStd-Md, Arial;
	position: relative;
	cursor: pointer;
}

.product.ralphlauren .votingRow{
	color: #000000;
	font-size:12px;
	font-weight: bold;
}

.product.ralphlauren.voted .votingRow .button {
	color: #999999;
}

.product.ralphlauren.voted .votingRow {
	cursor: default;
}

.product.ralphlauren .voteCount{
	color: #000000;
	font-size: 9px;
	white-space: nowrap;
	position: absolute;
	top: 7px;
	font-family: verdana, arial;
	font-weight: normal;
}

.product.ralphlauren .loveit{

}


.product.ralphlauren .label {
	clear:both;
	padding-top: 8px;
}

.product.ralphlauren .label A {
	color: black;
	text-decoration: none;
}

.product.ralphlauren .price {
}

.product.ralphlauren p {
	margin: 4px 0;
}

.product.ralphlauren .price1 {
	font-weight: bold;
}

.product.ralphlauren .price2 {
	font-weight: bold;
}

.product.ralphlauren .price3 {
	font-weight: bold;
	color: red;
}

.product.ralphlauren:HOVER {

}

.product.ralphlauren .voteButton {
	cursor: pointer;
}

.product.ralphlauren .buttons {
	margin: 6px 0 0 0;
}

.videoBlock {
	position: absolute;
	padding: 0;
	border: 0;
	border: 1px solid #cecece;
	-moz-box-sizing:    border-box;   /* Firefox 1, probably can drop this */
	-webkit-box-sizing: border-box;   /* Safari 3-4, also probably droppable */
    box-sizing:        border-box;   /* Everything else */
	overflow: hidden;
	line-height: 0;
	font-size: 0;
}

.videoBlock video {
	width: 100%;
	height: auto;
	display: block;
	line-height: 0;
	font-size: 0;
	margin: 0;
	border: 0;
	padding: 0;
	transition: opacity 0.5s ease-out;
	-webkit-transition: opacity 0.5 ease-out;

}








