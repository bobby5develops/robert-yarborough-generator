/* CSS Document */

BODY {
	margin: 0px !important;
	padding: 0px !important;
	font-family: arial, verdana, sans-serif;
}

.invisible {
	visibility: hidden;
}

#finderContainer {
	width: 1024px;

	position: relative;

}

.finderPage {
	width: 100%;
	position: relative;
	top: 0px;
	left: 0px;
	overflow: hidden;
	z-index:1;
	visibility: hidden;
}

#pageContainer {
	width: 100%;
	min-height: 537px;
	position: relative;
	overflow: hidden;

}

.image_replacement, .ir {
	text-indent: -9000px;
	outline: 0px;
	border: 0px;
	overflow: hidden;
}

A.image_replacement:hover {
	background-position: bottom !important;
}

#finderContainer #bodyContainer {
	position: relative;
	overflow: hidden;
    z-index: 0;
}

#finderContainer #bodyContainer .loading {
	position: absolute;
	background: #efefef;
	top: 0px;
	left: 0px;
	z-index: 595;
	width: 100%;
}

#finderContainer #bodyContainer #overlay {
	position: absolute;
	left: 0px;
	z-index: 595;
	width: 100%;
	height: 1200px;
	background: white;
	-moz-opacity: 0;
	-webkit-opacity: 0;
	-o-opacity: 0;
	opacity: 0;
	filter: alpha(opacity=70);
	zoom:1;
}



.finderPage #pageOverlay {
	position: absolute;
	left: 0px;
	z-index: 99;
	width: 100%;
	height: 100%;
	background: white;
	-moz-opacity: .7;
	-webkit-opacity: .7;
	-o-opacity: .7;
	opacity: .7;
	filter: alpha(opacity=70);
	zoom:1;
}


#finderContainer #bodyContainer .loading #loadingMessage {
	position: absolute;
	top: 100px;
	left: 306px;
	background: url("../images/loading.png");
	color: white;
	z-index: 999;
	width: 288px;
	height: 168px;
	text-align: center;
}

#finderContainer #bodyContainer .loading #loadingMessage IMG {
	margin-top: 100px;
}

#finderContainer #footer {


}




.being_animated * {
	visibility: inherit;
}

.poolContainer {
	position: relative;
	width: 1007px;
	margin: 0 auto;
}

.videobox {
	position: relative;
	display: inline-block;
	width: 500px;
	height: 500px;
	border: 10px solid #000;
}


A {
	outline: 0px;
}



